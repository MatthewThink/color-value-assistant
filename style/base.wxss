  padding: 10px 0;
  background-color: #fff;
  vertical-align: middle;
}

.section-body::before {
  display: table;
  box-sizing: border-box;
  content: " ";
}

.section-body::after {
  clear: both;
  display: table;
  content: " ";
  box-sizing: border-box;
}

