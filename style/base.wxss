/*基础CSS样式*/

::after, ::before {
  box-sizing: border-box;
}

.clear::before {
  display: table;
  content: " ";
  clear: both;
}

.clear::after {
  display: table;
  content: " ";
  clear: both;
}

.show {
  display: block !important;
}

.hidden {
  display: none !important;
}

.center-block {
  display: block;
  margin-right: auto;
  margin-left: auto;
}

.pull-right {
  float: right !important;
}

.pull-left {
  float: left !important;
}

/*
主页面元素，相当于body
*/

page {
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
  background-color: #fff;
  /*height: 100%;*/
  font-size: 14px;
  line-height: 1.42857143;
  color: #333;
}

/*
容器
*/

.container-fluid, .container {
  /*padding-right: 15rpx;
  padding-left: 15rpx;*/
  margin-right: auto;
  margin-left: auto;
  box-sizing: border-box;
}

.container-fluid::before, .container::before {
  display: table;
  content: " ";
  box-sizing: border-box;
}

.container-fluid::after, .container::after {
  display: table;
  content: " ";
  box-sizing: border-box;
  clear: both;
}

/*
传统行
*/
.row
{
    vertical-align: middle;
}

.row::before {
  display: table;
  box-sizing: border-box;
  content: " ";
  vertical-align: middle;
}

.row::after {
  clear: both;
  display: table;
  content: " ";
  box-sizing: border-box;
  vertical-align: middle;
}

/*
节
*/
