/* pages/plaza/fav.wxss */

.colorgroup
{
    display: flex;
    justify-content: center;
    align-items: center;
    padding-top: 15px;
    padding-bottom: 5px;
    margin-left: 10px;
    margin-right: 10px;
    margin-top: 50px;
    margin-bottom: 50px;
    box-shadow: 10px 10px 5px rgba(39, 48, 57, 0.05);    
}

.color-item
{
    flex-grow: 1;
}

.colorgroup p
{
    font-size: small;
    color: #888;
    padding: 5px;
}


.layer {
    background-color: #242424;
}

.box
{
    display: flex;
    align-items: center;
    justify-content:center;
}

.name
{
    border-bottom: 1px solid paleturquoise;
    padding: 5px;    
    color: white;
}

.info {
    color: white;
    margin: 36px;
}

.info p {
    margin-bottom: 10px;
    font-size: small;
}

.save {
    padding: 10px;
    background-color: #4c6cb3;
    color: white;
    text-align: center;
    position:fixed;
    bottom:0;
    left:0;
    right:0;
}